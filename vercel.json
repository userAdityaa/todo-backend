{
    "version": 2,
    "builds": [
      {
        "src": "api/index.go",
        "use": "@vercel/go", 
        "env": {
            "GO_BUILD_FLAGS": "-ldflags '-s -w'"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "api/index.go"
      }
    ],
    "env": {
      "GOOGLE_CLIENT_ID": "YOUR_GOOGLE_CLIENT_ID",
      "GOOGLE_CLIENT_SECRET": "YOUR_GOOGLE_CLIENT_SECRET",
      "GOOGLE_REDIRECT_URL": "YOUR_GOOGLE_REDIRECT_URL",
      "MONGO_URI": "YOUR_MONGO_URI"
    }
  }